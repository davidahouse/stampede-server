extends ../layout

include ../components/titleBar
include ../components/tableHeader
include ../components/tableCell
include ../components/tableRow
include ../components/formFile

block content

  +titleBar([{title: 'Overrides'}])
  div(class="flex flex-wrap m-4")

    table(class="table-auto w-full")
      thead
        tr
          +tableHeader('Parameter')
          +tableHeader('Default Vaule')
      tbody
         each override, i in overrides
          +tableRow()
            +tableCell(override.key)
            +tableCell(override.value)

  hr
  div(class="w-full p-3")
    div(class="bg-white border-transparent rounded-lg shadow-lg")
      div(class="bg-gray-400 uppercase text-gray-800 border-b-2 border-gray-500 rounded-tl-lg rounded-tr-lg p-2")
        h5(class="font-bold uppercase text-gray-600") Upload overrides
      div(class="p-5")
        form(class="w-full m-4" method="POST" action="/admin/uploadOverrides" encType="multipart/form-data")
          div(class="flex -mx-3 mb-6")
            div(class="w-1/2 px-3 mb-6 md:mb-0")
              +formFile(null, "uploadFile")
          div(class="w-1/2 px-3 mb-6 md:mb-0")
            button(class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded") Replace Overrides

