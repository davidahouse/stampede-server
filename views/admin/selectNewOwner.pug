extends ../layout
include ../components/titleBar
include ../components/tableHeader
include ../components/tableCell
include ../components/tableRow
include ../components/formSelect
include ../components/tableCellButton

block content

  +titleBar([{title: 'Select New Owner'}])
  div(class="flex flex-wrap m-4")
    form(class="w-full m-4" method="POST" action="/admin/addOwner" encType="multipart/form-data")
      div(class="flex -mx-3 mb-6")
        div(class="w-1/5 px-3 mb-6 md:mb-0")
          +formSelect("Owner", "owner", newOwners)
      div(class="w-1/4 px-3 mb-6 md:mb-0")
        button(class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded") Add