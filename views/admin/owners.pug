extends ../layout
include ../components/titleBar
include ../components/tableHeader
include ../components/tableCell
include ../components/tableRow
include ../components/formFile
include ../components/tableCellButton

block content

  +titleBar([{title: 'Owners'}])
  div(class="flex flex-wrap m-4")

    table(class="table-auto w-full")
      thead
        tr
          +tableHeader('Owner')
          +tableHeader('Action')
      tbody
         each owner, i in owners
          +tableRow()
            +tableCell(owner)
            +tableCellButton("Remove", `/admin/removeOwner` + `?owner=` + owner)

    div(class="p-4")
      form(class="w-full m-4" method="GET" action="/admin/selectNewOwner" encType="multipart/form-data")
        button(class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded") Add Owner
