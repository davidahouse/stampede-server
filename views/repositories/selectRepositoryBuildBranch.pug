extends ../layout
include ../components/titleBar
include ../components/tableHeader
include ../components/tableCell
include ../components/tableRow
include ../components/formSelect
include ../components/tableCellButton
include ../components/formHidden
include ../components/formInput

block content

  +titleBar([{title: 'Select Branch'}])
  div(class="flex flex-wrap m-4")
    form(class="w-full m-4" method="POST" action="/repositories/executeRepositoryBuildWithBranch" encType="multipart/form-data")
      div(class="flex -mx-3 mb-6")
        div(class="w-1/4 md:flex mb-6")
          +formInput("branch", "branch")
      div(class="w-1/4 px-3 mb-6 md:mb-0")
        +formHidden("owner", owner)
        +formHidden("repository", repository)
        +formHidden("build", build)
        button(class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded") Select Branch